{  
	"name":"iperf-NSD",
    "vendor":"fokus",
    "version":"0.1-ALPHA",
    "vnfd":[
        {  
            "vendor":"fokus",
            "version":"0.2",
            "name":"iperf-server",
            "type":"server",
