                    "vdu_selector":"vdu1",
                    "criteria":[
                        {
                            "name":"Iper-server not listening",
                            "parameter_ref":"NET_TCP_LISTEN",
                            "comparison_operator":"=",
                            "threshold":"0"
                        },
                        {
                            "name":"Log exception assertion",
                            "parameter_ref":"VFS.FILE.REGMATCH",
                            "comparison_operator":"=",
                            "threshold":"1"
                        }
                    ],
                    "actions":[{
                        "action_name":"HEAL",
                        "cause":"1"
                    },{
                        "action_name":"SWITCH_TO_STANDBY"
                    }
                    ],
                    "period":"5",
                    "cooldown":60,
                    "severity":"CRITICAL"
                }
            ],
            "deployment_flavour":[  
