                        {  
                            "exposed":true,
                            "connection_point":[  
                                {  
                                    "virtual_link_reference":"private"
                                }
                            ]
                        }
                    ],
                    "monitoring_parameter":[
                        {
                            "name":"AGENT_PING"
                        },
                        {
                            "name":"NET_TCP_LISTEN",
                            "params": {
                                "p1": "5001"
                            }
                        },
                        {
                            "name":"SYSTEM_CPU_LOAD",
                            "params": {
                                "p1":"all",
                                "p2":"avg5"
                            }
                        },
                        {
                            "name":"VFS.FILE.REGMATCH",
                            "params":
                            {
                                "p1":"/var/log/app.log",
                                "p2":"[Ee]xception"
                            }
                        }
                    ]
                }
            ],
            "virtual_link":[  
                {  
                    "name":"private"
                }
            ],
