{  
    "name":"iperf-NSD",
    "vendor":"fokus",
    "version":"0.1-ALPHA",
    "vld":[  
        {  
            "name":"private"
        }
    ],
    "vnfd":[  
        {  
            "name":"iperf-server",
            "vendor":"fokus",
            "version":"0.2",
            "lifecycle_event":[  
                {  
                    "event":"INSTANTIATE",
                    "lifecycle_events":[  
                        "install.sh",
                        "install-srv.sh"
                    ]
                }
            ],
            "configurations":{  
                "configurationParameters":[  
                    {  
                        "confKey":"key",
                        "value":"value"
                    }
                ],
                "name":"server-configuration"
            },
            "virtual_link":[  
                {  
                    "name":"private"
                }
            ],
            "vdu":[  
                {  
                    "vm_image":[  
                        "ubuntu-14.04-server-cloudimg-amd64-disk1"
                    ],
                    "scale_in_out":2,
                    "vnfc":[  
                        {  
                            "connection_point":[  
                                {
                                    "floatingIp":"random",  
                                    "virtual_link_reference":"private"
                                }
                            ]
                        }
                    ],
			"monitoring_parameter":[

                            "net.tcp.listen[5001]",

                            "system.cpu.load[all,avg5]"
                    ],
                    "vimInstanceName":"vim-instance"
                }
            ],
		    "fault_management_policy":[
                {
                    "name":"Iper-server-down",                   
                    "criteria":[
                        {
                            "name":"Iper-server not listening",
                            "parameter_ref":"net.tcp.listen[5001]",
                            "comparison_operator":"=",
                            "threshold":"0"
                        }
                    ],
                    "action":"SWITCH_TO_STANDBY",
                    "period":5,
                    "cooldown":60,
                    "severity":"CRITICAL"
                }
            ],
            "deployment_flavour":[  
                {  
                    "flavour_key":"m1.small"
                }
            ],
            "type":"server",
            "endpoint":"generic",
            "vnfPackage":{
                "scriptsLink":"https://gitlab.fokus.fraunhofer.de/openbaton/scripts-test-public.git"
            }
        }
    ]
}
